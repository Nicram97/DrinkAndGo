@using DrinkAndGo.Data.interfaces
@model Order
@{
    ViewData["Title"] = "Details";
    string isSent = (string)ViewData["isSent"];
    List<Product> Products = (List<Product>) ViewData["Products"];
}

<h2>Details</h2>

<dl class="dl-horizontal">
    <dt>Data</dt>
    <dd>@Model.OrderPlaced</dd>
    <dt>Status</dt>
    <dd>@isSent</dd>
    <dt>Suma</dt>
    <dd>@Model.OrderTotal</dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var Product in @Products)
            {
                <tr>
                    <td>@Product.Id</td>
                    <td>@Product.Name</td>
                    <td>@Product.Price</td>
                </tr>
            }
        }
    </tbody>
</table>
